  delay(3500);
  
  // limits the frames per second
  arduboy.setFrameRate(60);
}

void loop() {
  // put your main code here, to run repeatedly:
  
  // Wait for the next frame
   if (!(arduboy.nextFrame())) return;
  
  arduboy.pollButtons();
  arduboy.clear();

  if (state == 0)  { doSplash(); }
  else if (state == 1)  { gameplay(); }
  else if (state == 2)  { gameover(); }
  
  arduboy.display();
}

  // Splashscreen state
